h1= filename

#comments
  - each comment in comments
    - if (comment.ignore || !comment.ctx) continue
    .comment
      h2= comment.ctx.string
      .summary!= comment.description.summary
      - if (comment.description.body.length)
        .body!= comment.description.body
      a.button.view-source(href='#') +
      pre.source
        code!= comment.code
